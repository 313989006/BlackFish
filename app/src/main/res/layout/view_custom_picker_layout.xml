<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_picker_custom_cancel"
        android:text="取消"
        android:textSize="18sp"
        android:clickable="true"
        android:textColor="@color/splash_main_title_color"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_picker_custom_determine"
        android:text="确定"
        android:textSize="18sp"
        android:clickable="true"
        android:textColor="@color/splash_main_title_color"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.cncoderx.wheelview.Wheel3DView
        android:id="@+id/wheel_view_picker"
        android:layout_below="@+id/tv_picker_custom_cancel"
        app:cyclic="false"
        app:toward="right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>