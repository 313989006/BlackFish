<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/image_mine_bg_header"
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <ImageView
        android:id="@+id/iv_mine_pager_setting"
        android:src="@drawable/icon_mine_header_setting"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:layout_width="18dp"
        android:layout_height="18dp" />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_mine_header_portrait"
        android:scaleType="fitXY"
        app:roundAsCircle="true"
        android:layout_marginStart="15dp"
        android:layout_gravity="center_vertical"
        app:roundedCornerRadius="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/tv_user_tel_number"
        android:text="18800209572"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="80dp"
        android:layout_marginTop="-10dp"
        android:textColor="@color/splash_main_title_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="个人中心   "
        android:layout_gravity="center_vertical"
        android:layout_marginStart="80dp"
        android:drawableStart="@drawable/icon_mine_pager_header_toright"
        android:layout_marginTop="10dp"
        android:textColor="@color/splash_main_title_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>