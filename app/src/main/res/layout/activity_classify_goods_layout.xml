<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tv_classify_goods_title"
        android:text="标题"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/splash_main_title_color"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <LinearLayout
        android:layout_below="@+id/tv_classify_goods_title"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_classify_goods_left_title"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
        <android.support.v4.widget.NestedScrollView
            android:background="@color/colorWhite"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iv_classify_goods_details_header"
                    app:placeholderImage="@drawable/image_replace_bf_logo"
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
                <TextView
                    android:text="常用分类"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    style="@style/DividerTextView"/>
                <top.omooo.blackfish.view.GridViewForScroll
                    android:id="@+id/gv_classify_common"
                    android:numColumns="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </top.omooo.blackfish.view.GridViewForScroll>
                <TextView
                    android:text="热门分类"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="5dp"
                    style="@style/DividerTextView"/>
                <top.omooo.blackfish.view.GridViewForScroll
                    android:id="@+id/gv_classify_hot"
                    android:numColumns="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </top.omooo.blackfish.view.GridViewForScroll>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>
</RelativeLayout>