<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linear_home_pager_goods_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_goods_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_home_goods_title_image"
            android:layout_width="5dp"
            android:layout_height="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_home_subtitle_left1"/>

        <TextView
            android:id="@+id/tv_home_goods_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/tv_home_goods_title_image"
            android:text="女生节活动专场"
            android:textColor="@color/splash_main_title_color"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp"
            android:src="@drawable/icon_home_pager_goods_title_to_right"/>
    </RelativeLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_home_goods_big_image"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>
    <!--脏！-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_home_goods_item_1"
            android:layout_weight="1"
            android:layout_marginEnd="0.1dp"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_home_goods_item_2"
            android:layout_weight="1"
            android:layout_marginStart="0.1dp"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="0.2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_home_goods_item_3"
            android:layout_weight="1"
            android:layout_marginEnd="0.1dp"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_home_goods_item_4"
            android:layout_weight="1"
            android:layout_marginStart="0.1dp"
            android:scaleType="centerCrop"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>