<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/tv_mine_set_pwd_back"
            android:src="@drawable/icon_to_left"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/tv_mine_set_pwd_title"
            style="@style/HeaderTitleStyle"/>
    </FrameLayout>
    <TextView
        android:id="@+id/tv_mine_set_pwd_subtitle"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et_mine_set_pwd"
        android:inputType="textPassword"
        android:maxLength="16"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_centerHorizontal="true"
        android:paddingStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_mine_forget_pwd"
        android:layout_alignParentEnd="true"
        android:text="忘记密码"
        android:layout_below="@+id/et_mine_set_pwd"
        android:textColor="@color/colorSugType"
        android:visibility="gone"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_mine_set_pwd_submit"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/seletor_btn_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>