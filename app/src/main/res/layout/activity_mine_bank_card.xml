<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/tv_mine_bank_card_back"
            android:src="@drawable/icon_to_left"
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:text="银行卡"
            style="@style/HeaderTitleStyle"/>
    </FrameLayout>
    <TextView
        style="@style/DividerTextView"
        android:layout_marginStart="0dp"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout_my_back_card"
        android:background="@color/colorWhite"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabTextColor="@color/colorDivider"
        app:tabSelectedTextColor="@color/splash_main_title_color"
        app:tabMode="fixed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.design.widget.TabLayout>
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_user_without_bank_card"
        android:layout_width="150dp"
        android:layout_height="150dp" />
    <TextView
        android:id="@+id/tv_without_bank_card_title"
        android:text="暂无储蓄卡"
        android:textSize="20sp"
        android:textColor="@color/splash_main_title_color"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_with_bank_card_subtitle"
        android:text="哎呀～你还没有绑定储蓄卡"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_bank_card_add"
        android:text="添加储蓄卡"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_button_add_bank_card"
        android:textColor="@color/splash_main_title_color"
        android:layout_marginTop="40dp"
        android:layout_width="120dp"
        android:layout_height="40dp" />
</LinearLayout>