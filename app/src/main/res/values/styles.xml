<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--透明状态栏-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <item name="android:statusBarColor">@color/colorStatue</item>
    </style>

    //解决冷启动方案
    <style name="StartAppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>    //设置满屏,没有状态栏,不需要可去掉
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash</item>  //设置欢迎页图片
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--验证码TextView样式-->
    <style name="VerifyCodeTextView">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">41dp</item>
        <item name="android:background">#00000000</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="MinePagerTextListStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <!--<item name="android:background">@color/colorWhite</item>-->
        <item name="android:background">@drawable/selector_text_view_pressed</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/splash_main_title_color</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@drawable/icon_mine_pager_header_toright</item>
    </style>

    <style name="DividerTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="GridTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:gravity">center_horizontal|bottom</item>
    </style>

    <style name="TitleHeaderTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/splash_main_title_color</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableLeft">@drawable/icon_to_left</item>
    </style>

    <style name="DetailActivityTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/colorWhite</item>
    </style>
</resources>
